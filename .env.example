# Backend app role (RLS restricted)
APP_DATABASE_URL=postgresql://contract_ai_app:contract_ai_app@db:5432/contract_ai

# Ingestion role (trusted internal pipeline role)
INGEST_DATABASE_URL=postgresql://contract_ai_ingest:contract_ai_ingest@db:5432/contract_ai

API_HOST=0.0.0.0
API_PORT=8000
SIMILARITY_THRESHOLD=0.25
DEFAULT_TOP_K=5
ALLOWED_CLIENTS=Bank_A,Bank_B,Bank_C

# Ollama / LLM
OLLAMA_HOST=http://host.docker.internal:11434   # local dev; production: http://localhost:11434
OLLAMA_MODEL=llama3.2:latest                    # local dev; production: llama3:8b-instruct
LLM_ENABLED=true
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1024

# --- Auth (disabled for demo) ---
AUTH_ENABLED=false
JUMPCLOUD_ISSUER=
JUMPCLOUD_CLIENT_ID=
JUMPCLOUD_AUDIENCE=
JUMPCLOUD_JWKS_URL=

# --- Security ---
CORS_ORIGINS=*
RATE_LIMIT_PER_MINUTE=0
API_KEY_REQUIRED=false
API_KEY=

# --- Prompt Engineering ---
PROMPT_VERSION=v1

# Frontend
VITE_API_BASE_URL=http://localhost:8000
VITE_AUTH_ENABLED=false
VITE_JUMPCLOUD_CLIENT_ID=
VITE_JUMPCLOUD_AUTHORIZE_URL=
